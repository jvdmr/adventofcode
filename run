#!/bin/bash

function show_help () {
  echo "$0 [-h] [-t] <year>/<day>-<part>

-h            help (this)

-t            Only run tests

-d            Run profiling, debugging
  "
}

PROD=true
while getopts "htd" opt; do
  case "$opt" in
  h|\?)
    show_help
    exit 0
    ;;
  t)
    PROD=false
    ;;
  d)
    GHCOPTS="-prof -fprof-auto -fprof-cafs"
    RUNOPTS="+RTS -xc"
    ;;
  :)
    echo "Option -$OPTARG requires an argument." >&2
    exit 1
    ;;
  esac
done

shift $(($OPTIND - 1))
dir="$@"

cd $dir

ghc Advent $GHCOPTS || exit 1

for testinput in testinput*
do
  time ./Advent $RUNOPTS < $testinput
done

if $PROD
then
  time ./Advent $RUNOPTS < input
fi
